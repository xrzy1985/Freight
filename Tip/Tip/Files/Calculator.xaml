<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tip.Files.Calculator">
    <ContentPage.Content>
        <StackLayout Margin="10, 50, 10, 0" HorizontalOptions="Center" VerticalOptions="Start">

            <Label Margin="10" Text="Enter your total sales below" />

            <Entry x:Name="sales" Margin="10" Placeholder="total sales" />

            <Label Margin="10" Text="Enter the number of essays working" />

            <Entry x:Name="essays" Margin="10" Placeholder="essays" />

            <Button Margin="10" BackgroundColor="DarkGray" TextColor="Black" Text="Calculate" Clicked="Button_Clicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>