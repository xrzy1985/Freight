<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tip.Files.Bartender">
    <ContentPage.Content>
        <StackLayout Margin="10, 50, 10, 0" HorizontalOptions="Center" VerticalOptions="Start">

            <Label Margin="10" Text="Enter your bar sales below" />

            <Entry x:Name="bar_sales" Margin="10" Placeholder="bar sales" />

            <Button Margin="10" BackgroundColor="DarkGray" TextColor="Black" Text="Calculate" Clicked="Button_Clicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>